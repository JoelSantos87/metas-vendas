        <h3>HistÃ³rico de Vendas</h3>
        <table>
          <tr><th>Data</th><th>Valor (R$)</th></tr>
          <% metaAtual.progresso_diario.forEach(p => { %>
            <tr>
              <td><%= p.dia %></td>
              <td>R$ <%= p.valor.toFixed(2) %></td>
            </tr>
          <% }) %>
        </table>
