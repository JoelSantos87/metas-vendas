      const vendaHoje = ultimoDia ? ultimoDia.valor : 0;

      const bateuMetaHoje = vendaHoje >= metaDiaria;
    %>
      <div class="meta-info">
        <p><strong>MÃªs:</strong> <%= metaAtual.mes %></p>
